source /etc/network/interfaces.d/*.intf

#loopback
auto lo
iface lo inet loopback

#management
auto eth0
iface eth0 inet dhcp

{{range .}}
#{{.For}}
auto {{.Name}}
iface {{.Name}}
{{range .BridgeDefs}}{{.}}
{{end -}}
{{end}}

auto bridge
iface bridge
  bridge-vlan-aware yes
  bridge-ports {{range .}} {{.Name}}{{end}}
  bridge-stp off
  bridge-mcquerier 1
  bridge-mcsnoop 1
